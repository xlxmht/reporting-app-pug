extend layout

block content
  div(class="card shadow mb-4")
    div(class="card-header py-3")
      h6(class="m-0 font-weight-bold text-primary") Student List
      a(href="/newregister" class="btn btn-primary btn-user" style="float: right;") New Register

    div(class="card-body")
      div(class="table-responsive")
        table( class="table table-bordered" id="dataTable" width="100%" cellspacing="0")
          thead
            tr
              th Name
              th Email
              th Gender
              th Course
              th(colspan="2" style="text-align: center") Action
          tbody
            each student in students
              tr
                td(style="display: none" id="student-id")= student._id
                td= student.name
                td= student.email
                td= student.gender
                td= student.course
                td(style="text-align: center")
                  a(href=`/editstudent/${student._id}`)
                    i(class="fas fa-fw fa-pencil-alt" class="edit__student")
                td(style="text-align: center")
                  i(class="fas fa-trash fa-trash-alt" class="delete__student")